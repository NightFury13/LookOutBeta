<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lookout2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"  >
        <activity
            android:name="com.example.lookout2.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.lookout2.RecordAudio"
            android:label="@string/title_activity_record_audio" >
        </activity>
        <activity
            android:name="com.example.lookout2.RecorderThread"
            android:label="@string/title_activity_recorder_thread" >
        </activity>
        <activity
            android:name="com.example.lookout2.StartService"
            android:label="@string/title_activity_start_service" >
        </activity>
        
        <service 
            android:name = "StartService"></service>
        
        
        
    </application>
    
    <uses-permission android:name="android.permission.VIBRATE"/>

    <uses-permission android:name="android.permission.RECORD_AUDIO" />

</manifest>
